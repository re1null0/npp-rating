<% provide(:title, 'Sign up') %>
<h1>Регистрация</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: signup_path) do |f| %>
     <%= render 'shared/error_messages' %>
      <%= f.label :name, "Имя" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :role ,"Роль эксперт/координатор" %>
      <%= f.select :role, [["expert", "expert"], ["coordinator", "coordinator"], ["atameken", "atameken"]], {}, {class: "form-control"} %>

      <%= f.label :workplace, "Место работы (если выбран координатор введите код университет)" %>
      <%= f.text_field :workplace, class: 'form-control' %>

      <%= f.label :password, "Пароль" %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Повторите пароль" %>
      <%= f.password_field :password_confirmation, class: 'form-control'%>

      <%= f.submit "Создать пользователя", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
