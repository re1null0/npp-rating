<p id="notice"><%= notice %></p>

<h1>Специальности на оценивание</h1>

<table>
  <thead>
    <tr>
      <th>ВУЗ</th>
      <th>Специальность</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spec = @specialities.where(["email = ?", current_user.email]) %>
    <% @spec.each do |speciality| %>
      <tr>
        <% @uni = University.new()
    @uni = University.where(["key = ?", speciality.university]).first%>

    <% @spec = SpecialityPull.new()
    @spec = SpecialityPull.where(["key = ?", speciality.name]).first%>
        <td><%= @uni.name %></td>
        <td><%= @spec.name %></td>
        <%if speciality.mark.empty?%>
          <td><%= link_to 'Оценить', edit_speciality_path(speciality) %></td>
        <%else%>
          <td> <%= link_to 'Посмотреть', speciality_path(speciality) %></td>
          <td><%= link_to 'Изменить', edit_speciality_path(speciality) %></td>
          <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

