<%= form_with(model: university, local: true) do |form| %>
  <% if university.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@university.errors.count, "error") %> prohibited this university from being saved:</h2>

      <ul>
      <% university.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field"> 
    <%= form.label :key %>
    <%  user = current_user() 
      @uni = UniversityPull.where(["key = ?", user.workplace]).first

    %>
    <%= @uni.key%>
    <%= form.hidden_field :key,  class: 'form-control', value: current_user.workplace %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= @uni.name%>
    <%= form.hidden_field :name,  class: 'form-control', value: @uni.name %>
  </div>

  <div class="field">
    <%= form.label "Специальность" %>
    <% @spec = SpecialityPull.all %>
    <%= form.select :speciality, options_for_select(@spec.map { |spec| [spec.key] }) %>
  </div>
  
  <%= form.label "Модуль образовательных программ" %>
  <div class="iconfile"><img width="24" src="https://s8.hostingkartinok.com/uploads/images/2018/08/87da6282a44b104081a74235901989bd.png"> Файл должен быть загружен в pdf формате</div>
  <%= form.file_field :mop %>
  
  <div class="iconfile"><img width="24" src="https://s8.hostingkartinok.com/uploads/images/2018/08/87da6282a44b104081a74235901989bd.png">Файл должен быть загружен в pdf формате</div>
  <%= form.label "Каталог элективных дисциплин" %>
  <%= form.file_field :ked %>
  
  <div class="iconfile"><img width="24" src="https://s8.hostingkartinok.com/uploads/images/2018/08/87da6282a44b104081a74235901989bd.png">Файл должен быть загружен в pdf формате</div>
  <%= form.label "Рабочий учебный план" %>
  <%= form.file_field :rup %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
